<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_company_form_ksef2" model="ir.ui.view">
        <field name="name">res.company.form.ksef2</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook" position="inside">
                <page string="KSeF">
                    <group>
                        <field name="ksef_environment"/>
                        <field name="ksef_context_identifier"/>
                        <field name="ksef_access_token" password="True"/>
                        <field name="ksef_refresh_token" password="True"/>
                        <field name="ksef_token" password="True"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
